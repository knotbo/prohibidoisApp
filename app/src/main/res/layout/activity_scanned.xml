<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scannedLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".ScannedActivity">


    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">


        <RelativeLayout
            android:id="@+id/form_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/activity_description_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:padding="20dp"
                android:text="DATOS CLIENTE"
                android:textAllCaps="true"
                android:textSize="30sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/scan_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/activity_description_txt"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/buttons"
                android:backgroundTint="@color/colorPrimaryDark"
                android:drawableLeft="@drawable/ic_twotone_camera_alt_24"
                android:padding="12dp"
                android:text="Leer Documento"
                android:textSize="18sp" />

            <Button
                android:id="@+id/manual_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/scan_button"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/buttons"
                android:backgroundTint="@color/colorPrimaryDark"
                android:drawableLeft="@drawable/ic_twotone_keyboard_24"
                android:padding="12dp"
                android:text="Comprobación Manual"
                android:textSize="18sp" />

            <LinearLayout
                android:id="@+id/linear_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/manual_button"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:id="@+id/txt_surname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Apellidos"
                    android:textAllCaps="true"
                    android:visibility="gone" />

                <EditText
                    android:id="@+id/edit_surname"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="20dp"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/txt_given_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nombre"
                    android:textAllCaps="true"
                    android:visibility="gone" />

                <EditText
                    android:id="@+id/edit_given_name"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="20dp"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/txt_document_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DNI"
                    android:textAllCaps="true" />

                <EditText
                    android:id="@+id/edit_document_number"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="20dp"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:inputType="text" />

                <TextView
                    android:id="@+id/txt_issuing_country"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PAIS EMISOR"
                    android:textAllCaps="true"
                    android:visibility="gone" />

                <EditText
                    android:id="@+id/edit_issuing_country"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="20dp"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/txt_nationality"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NACIONALIDAD"
                    android:textAllCaps="true"
                    android:visibility="gone" />

                <EditText
                    android:id="@+id/edit_nationality"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="20dp"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/txt_date_of_birth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="FECHA DE NACIMIENTO"
                    android:textAllCaps="true" />

                <EditText
                    android:id="@+id/edit_date_of_birth"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="20dp"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:inputType="date" />

                <TextView
                    android:id="@+id/txt_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="sexo"
                    android:textAllCaps="true"
                    android:visibility="gone" />

                <EditText
                    android:id="@+id/edit_sex"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="20dp"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/txt_issuing_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fecha de Expedidición"
                    android:textAllCaps="true"
                    android:visibility="gone" />

                <EditText
                    android:id="@+id/edit_issuing_date"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="20dp"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:inputType="date"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/txt_expiration_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="fecha de caducidad"
                    android:textAllCaps="true"
                    android:visibility="gone" />

                <EditText
                    android:id="@+id/edit_expiration_date"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="20dp"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:inputType="date"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/txt_optional_values"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="valores opcionales"
                    android:textAllCaps="true"
                    android:visibility="gone" />

                <EditText
                    android:id="@+id/edit_optional_values"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="20dp"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:inputType="number"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/label_mrz"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MRZ Completo"
                    android:textAllCaps="true"
                    android:visibility="gone" />

                <EditText
                    android:id="@+id/edit_raw_mrz"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:inputType="textMultiLine"
                    android:lines="3"
                    android:minLines="3"
                    android:textSize="18dp"
                    android:visibility="gone" />
                <!--android:maxLength="30"*/
                    android:autoSizeTextType="uniform"
                    android:autoSizeMinTextSize="12sp"
                    android:autoSizeMaxTextSize="100sp"
                    android:autoSizeStepGranularity="2sp"
                     /> !-->

                <TextView
                    android:id="@+id/label_sdk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SDK"
                    android:textAllCaps="true"
                    android:visibility="gone" />

                <EditText
                    android:id="@+id/edit_sdk"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="20dp"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:inputType="number"
                    android:visibility="gone" />
            </LinearLayout>

